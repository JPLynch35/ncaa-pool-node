<main class='main-content bgc-grey-100'>
  <div id='mainContent'>
    <div class="row gap-20 masonry pos-r">
      <div class="masonry-sizer col-md-6"></div>
      <div class="masonry-item col-md-6">
        <div class="bgc-white p-20 bd">
          <h6 class="c-grey-900">Admin - Season Settings</h6>
          <div class="mT-30">
            <form action="/admin/season_settings" method="post">
              <div class="form-group">
                <label for="year">Current Season</label>
                <select id="year" name="year" class="form-control">
                  <% for(var i = 0; i < seasonYears.length; i++) { %>
                    <% if (season.year == seasonYears[i]) { %>
                      <option selected=true value=<%= seasonYears[i] %>><%= seasonYears[i] %></option>
                    <% } else { %>
                      <option value=<%= seasonYears[i] %>><%= seasonYears[i] %></option>
                    <% }; %>
                  <% }; %>
                </select>
              </div>
              <div class="form-group">
                <label for="startDate">Start Date</label>
                <% const humanized_start_date = season.start_date.toISOString().substring(0, 10) %>
                <input type="date" class="form-control" id="start-date" name="startDate" value=<%= humanized_start_date %>>
              </div>
              <div class="form-group">
                <label for="endDate">End Date</label>
                <% const humanized_end_date = season.end_date.toISOString().substring(0, 10) %>
                <input type="date" class="form-control" id="end-date" name="endDate" value=<%= humanized_end_date %>>
              </div>
              <div class="form-group">
                <label for="endDate">Spending Cap</label>
                <div class="input-group money-field">
                  <i class="input-group-addon">$</i>
                  <input type="text" class="form-control" id="spending-cap" name="spendingCap" value=<%= season.spending_cap %>>
                </div>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
